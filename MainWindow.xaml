<ui:FluentWindow
    x:Class="Automatization.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Automatization.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Automatization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:utils="clr-namespace:Automatization.Utils"
    xmlns:viewmodels="clr-namespace:Automatization.ViewModels"
    Title="Automatization"
    Width="600"
    Height="750"
    MinWidth="500"
    ExtendsContentIntoTitleBar="True"
    FontFamily="Segoe UI"
    WindowBackdropType="Acrylic"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:PowerupViewModel}">
            <Grid Margin="5,5,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="150" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Height="35"
                    HorizontalAlignment="Stretch"
                    Command="{Binding TogglePowerupCommand}"
                    Content="{Binding ButtonContent}" />

                <StackPanel
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Slider
                        Width="120"
                        VerticalAlignment="Center"
                        IsSnapToTickEnabled="True"
                        Maximum="5000"
                        Minimum="1"
                        Tag="{Binding PowerupType}"
                        TickFrequency="10"
                        Value="{Binding Delay, Mode=TwoWay}" />

                    <TextBlock
                        Width="50"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="{Binding DelayText}"
                        TextAlignment="Right" />
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar Title="{DynamicResource Main_Title}" Grid.Row="0" />

        <Grid Grid.Row="1" Margin="10,5,10,5">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <CheckBox
                    x:Name="PauseHotkeysCheckBox"
                    Margin="0,0,15,0"
                    VerticalAlignment="Center"
                    Checked="PauseHotkeysCheckBox_Checked"
                    Content="{DynamicResource Main_PauseHotkeys}"
                    ToolTip="Temporarily disable all global hotkeys."
                    Unchecked="PauseHotkeysCheckBox_Unchecked" />

                <Button
                    x:Name="RoadmapButton"
                    Height="30"
                    Margin="0,0,10,0"
                    Padding="15,0"
                    Click="RoadmapButton_Click"
                    Content="Roadmap" />

                <Button
                    x:Name="SettingsButton"
                    Height="30"
                    Padding="15,0"
                    Click="SettingsButton_Click"
                    Content="{DynamicResource Main_Settings}" />
                <Button
                    x:Name="ShowDebugButton"
                    Height="30"
                    Margin="10,0,0,0"
                    Padding="15,0"
                    Click="ShowDebugButton_Click"
                    Content="{DynamicResource Main_Debug}" />
            </StackPanel>
        </Grid>

        <ScrollViewer
            Grid.Row="2"
            Padding="15"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <ui:Button
                    x:Name="LaunchButton"
                    Margin="0,10"
                    HorizontalAlignment="Center"
                    Appearance="Primary"
                    Click="LaunchButton_Click"
                    Content="{DynamicResource Main_LaunchGame}"
                    Icon="{ui:SymbolIcon Rocket24}"
                    Visibility="Collapsed" />

                <GroupBox Margin="0,0,0,10" Header="{DynamicResource Group_Tools}">
                    <StackPanel Margin="5">
                        <ui:Button
                            Margin="0,0,0,10"
                            HorizontalAlignment="Stretch"
                            Click="DiscountCalculatorButton_Click"
                            Content="{DynamicResource Tool_DiscountCalculator}"
                            Icon="{ui:SymbolIcon Calculator24}" />
                    </StackPanel>
                </GroupBox>

                <GroupBox
                    x:Name="SmartFeaturesGroup"
                    Margin="0,0,0,10"
                    Header="{DynamicResource Group_SmartFeatures}"
                    Visibility="Collapsed">
                    <StackPanel Margin="5">
                        <ui:Button
                            x:Name="SmartRepairButton"
                            Margin="0,0,0,10"
                            HorizontalAlignment="Stretch"
                            Appearance="Secondary"
                            Click="SmartRepairButton_Click"
                            Content="{DynamicResource Smart_RepairKit}"
                            Icon="{ui:SymbolIcon HeartPulse24}" />

                        <CheckBox
                            x:Name="AutoGoldBoxCheckBox"
                            Grid.Column="0"
                            Margin="-10,0,0,0"
                            Checked="AutoGoldBoxCheckBox_Checked"
                            Content="{DynamicResource Smart_GoldBox}"
                            Unchecked="AutoGoldBoxCheckBox_Unchecked" />

                        <TextBlock FontWeight="Bold" Foreground="Red">Smart Gold Box Detection might not work as expected, please avoid using it.</TextBlock>
                    </StackPanel>
                </GroupBox>

                <GroupBox x:Name="PowerupsGroup" Header="{DynamicResource Group_Powerups}">
                    <ItemsControl ItemsSource="{Binding Powerups}" />
                </GroupBox>

                <GroupBox Margin="0,10" Header="{DynamicResource Group_TeamAutoClickers}">
                    <StackPanel Margin="5">
                        <TextBlock Margin="5,0,5,5" Text="{DynamicResource Team_ClickType}" />
                        <ComboBox
                            x:Name="ClickTypeComboBox"
                            Margin="0,0,0,10"
                            HorizontalAlignment="Stretch" />

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <ui:Button
                                x:Name="RedTeamButton"
                                Grid.Column="0"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                Appearance="Danger"
                                Click="RedTeamButton_Click"
                                Content="{DynamicResource Team_AutoRed}"
                                Icon="{ui:SymbolIcon Flag24}" />

                            <ui:Button
                                x:Name="BlueTeamButton"
                                Grid.Column="2"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                Appearance="Primary"
                                Click="BlueTeamButton_Click"
                                Content="{DynamicResource Team_AutoBlue}"
                                Icon="{ui:SymbolIcon Flag24}" />
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox
                    x:Name="DebugGroup"
                    Margin="0,10"
                    Header="{DynamicResource Group_Debug}"
                    Visibility="Collapsed">
                    <StackPanel Margin="5">
                        <ui:Button
                            Margin="0,0,0,5"
                            HorizontalAlignment="Stretch"
                            Click="SimulateGoldBox_Click"
                            Content="{DynamicResource Debug_SimulateGoldBox}"
                            Icon="{ui:SymbolIcon Box24}" />
                        <ui:Button
                            HorizontalAlignment="Stretch"
                            Click="TestImageDetection_Click"
                            Content="{DynamicResource Debug_TestImage}"
                            Icon="{ui:SymbolIcon Image24}" />
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock
                    x:Name="StatusText"
                    Margin="10,0"
                    FontWeight="SemiBold"
                    Text="{DynamicResource Status_Ready}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</ui:FluentWindow>