<Window x:Class="Automatization.Settings.LogViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log Viewer" Height="450" Width="800"
        Background="{DynamicResource WindowBackground}"
        BorderThickness="1" BorderBrush="{DynamicResource Border}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="LogTextBox" Grid.Row="0" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                 Background="{DynamicResource TextBoxBackground}"
                 Foreground="{DynamicResource TextBoxForeground}"
                 BorderBrush="{DynamicResource TextBoxBorder}"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="RefreshButton" Content="Refresh" Width="80" Margin="0,0,10,0"
                    Click="RefreshButton_Click"
                    Background="{DynamicResource ButtonBackground}"
                    Foreground="{DynamicResource ButtonForeground}"
                    BorderBrush="{DynamicResource ButtonBorder}"/>
            <Button x:Name="CloseButton" Content="Close" Width="80" IsCancel="True"
                    Click="CloseButton_Click"
                    Background="{DynamicResource ButtonBackground}"
                    Foreground="{DynamicResource ButtonForeground}"
                    BorderBrush="{DynamicResource ButtonBorder}"/>
        </StackPanel>
    </Grid>
</Window>
