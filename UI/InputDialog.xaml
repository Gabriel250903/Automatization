<Window x:Class="Automatization.UI.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Password" Height="200" Width="300"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackground}"
        BorderThickness="1" BorderBrush="{DynamicResource Border}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Enter administrator password:" Margin="0,0,0,10"
                   Foreground="{DynamicResource Foreground}"/>
        <PasswordBox Grid.Row="1" x:Name="PasswordInput" Margin="0,0,0,10"
                     Background="{DynamicResource TextBoxBackground}"
                     Foreground="{DynamicResource TextBoxForeground}"
                     BorderBrush="{DynamicResource TextBoxBorder}"/>
        <TextBlock x:Name="ErrorMessage" Grid.Row="2" Margin="0,0,0,10"
                   Foreground="Red" Visibility="Collapsed" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="0,0,10,0" IsDefault="True" Click="OkButton_Click"
                    Background="{DynamicResource ButtonBackground}"
                    Foreground="{DynamicResource ButtonForeground}"
                    BorderBrush="{DynamicResource ButtonBorder}"/>
            <Button Content="Cancel" Width="75" IsCancel="True" Click="CancelButton_Click"
                    Background="{DynamicResource ButtonBackground}"
                    Foreground="{DynamicResource ButtonForeground}"
                    BorderBrush="{DynamicResource ButtonBorder}"/>
        </StackPanel>
    </Grid>
</Window>
