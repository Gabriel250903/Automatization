<ui:FluentWindow
    x:Class="Automatization.UI.ReportDetailWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Report Details"
    Width="600"
    Height="700"
    ExtendsContentIntoTitleBar="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar Title="{Binding Report.Title}" Grid.Row="0" />

        <StackPanel
            Grid.Row="1"
            Margin="10,10,10,0"
            Orientation="Horizontal">
            <ui:TextBlock FontWeight="Bold" Text="Report Type: " />
            <ui:TextBlock Text="{Binding ReportType}" />
        </StackPanel>

        <ui:TextBlock
            Grid.Row="2"
            Margin="10,10,10,5"
            FontWeight="Bold"
            Text="Title:" />
        <ui:TextBox
            Grid.Row="3"
            Margin="10,0,10,10"
            IsReadOnly="True"
            Text="{Binding Report.Title}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />

        <ui:TextBlock
            Grid.Row="4"
            Margin="10,0,10,5"
            FontWeight="Bold"
            Text="Description:" />

        <ScrollViewer
            Grid.Row="5"
            Margin="10,0,10,10"
            VerticalScrollBarVisibility="Auto">
            <ui:TextBox
                IsReadOnly="True"
                Text="{Binding Report.Description}"
                TextWrapping="Wrap" />
        </ScrollViewer>

        <StackPanel
            Grid.Row="6"
            Margin="10,0,10,10"
            Visibility="{Binding HasScreenshots, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ui:TextBlock
                Margin="0,0,0,5"
                FontWeight="Bold"
                Text="Screenshots:" />
            <ItemsControl ItemsSource="{Binding Screenshots}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button
                            Width="100"
                            Height="100"
                            Margin="0,0,5,5"
                            Padding="0"
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding DataContext.OpenImageCommand, RelativeSource={RelativeSource AncestorType=ui:FluentWindow}}"
                            CommandParameter="{Binding}"
                            ToolTip="Click to open">
                            <Image Source="{Binding Converter={StaticResource LocalPathToImageSourceConverter}}" Stretch="UniformToFill" />
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <StackPanel
            Grid.Row="7"
            Margin="10,0,10,10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <ui:TextBlock
                VerticalAlignment="Center"
                FontStyle="Italic"
                Text="Submitted: " />
            <ui:TextBlock
                Margin="0,0,20,0"
                VerticalAlignment="Center"
                FontStyle="Italic"
                Text="{Binding Report.Timestamp}" />
            <ui:Button
                Margin="0,0,10,0"
                Command="{Binding ViewLogCommand}"
                Content="View Log File"
                IsEnabled="{Binding HasLogFile}"
                ToolTip="{Binding ViewLogToolTip}" />
            <Button
                Width="80"
                Click="CloseButton_Click"
                Content="Close" />
        </StackPanel>
    </Grid>
</ui:FluentWindow>