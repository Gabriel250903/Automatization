<ui:FluentWindow
    x:Class="Automatization.UI.ThemeCreatorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Theme Creator"
    Width="550"
    Height="650"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar Title="{DynamicResource Theme_Title}" Grid.Row="0" />

        <ScrollViewer
            Grid.Row="1"
            Margin="0,10"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <ui:TextBox
                    x:Name="ThemeNameBox"
                    Margin="0,0,0,15"
                    PlaceholderText="{DynamicResource Theme_NamePlaceholder}" />

                <ui:CardExpander
                    Margin="0,0,0,10"
                    Header="{DynamicResource Theme_WindowBg}"
                    Icon="{ui:SymbolIcon AppGeneric24}"
                    IsExpanded="True">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                            <RadioButton
                                x:Name="RadioSolid"
                                Margin="0,0,10,0"
                                Checked="BgMode_Checked"
                                Content="{DynamicResource Theme_Solid}"
                                GroupName="BgMode"
                                IsChecked="True" />
                            <RadioButton
                                x:Name="RadioGradient"
                                Margin="0,0,10,0"
                                Checked="BgMode_Checked"
                                Content="{DynamicResource Theme_Gradient}"
                                GroupName="BgMode" />
                            <RadioButton
                                x:Name="RadioImage"
                                Checked="BgMode_Checked"
                                Content="{DynamicResource Theme_Image}"
                                GroupName="BgMode" />
                        </StackPanel>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock
                                    x:Name="PrimaryColorLabel"
                                    FontWeight="SemiBold"
                                    Text="{DynamicResource Theme_PrimaryColor}" />
                                <TextBlock
                                    FontSize="11"
                                    Opacity="0.7"
                                    Text="{DynamicResource Theme_PrimaryDesc}" />
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Border
                                    x:Name="WindowBgPreview"
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0"
                                    BorderBrush="#333333"
                                    BorderThickness="1"
                                    CornerRadius="10">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding Text, ElementName=WindowBgHex}" />
                                    </Border.Background>
                                </Border>
                                <ui:TextBox
                                    x:Name="WindowBgHex"
                                    MinWidth="110"
                                    Margin="0,0,5,0"
                                    HorizontalContentAlignment="Center"
                                    Text="#FFFFFFFF" />
                                <Button
                                    Click="PickColor_Click"
                                    Content="..."
                                    Tag="{Binding ElementName=WindowBgHex}" />
                            </StackPanel>
                        </Grid>

                        <Grid
                            x:Name="GradientEndContainer"
                            Margin="0,0,0,10"
                            Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock FontWeight="SemiBold" Text="{DynamicResource Theme_GradientEnd}" />
                                <TextBlock
                                    FontSize="11"
                                    Opacity="0.7"
                                    Text="{DynamicResource Theme_GradientEndDesc}" />
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Border
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0"
                                    BorderBrush="#333333"
                                    BorderThickness="1"
                                    CornerRadius="10">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding Text, ElementName=GradientEndHex}" />
                                    </Border.Background>
                                </Border>
                                <ui:TextBox
                                    x:Name="GradientEndHex"
                                    MinWidth="110"
                                    Margin="0,0,5,0"
                                    HorizontalContentAlignment="Center"
                                    Text="#FFDDDDDD" />
                                <Button
                                    Click="PickColor_Click"
                                    Content="..."
                                    Tag="{Binding ElementName=GradientEndHex}" />
                            </StackPanel>
                        </Grid>

                        <Grid
                            x:Name="ImageContainer"
                            Margin="0,0,0,10"
                            Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Margin="0,0,0,5"
                                FontWeight="SemiBold"
                                Text="{DynamicResource Theme_ImagePath}" />
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <ui:TextBox
                                    x:Name="ImagePathBox"
                                    Margin="0,0,5,0"
                                    PlaceholderText="C:\Wallpapers\Image.jpg" />
                                <ui:Button
                                    Grid.Column="1"
                                    Click="BrowseImage_Click"
                                    Icon="{ui:SymbolIcon FolderOpen24}" />
                            </Grid>
                        </Grid>
                    </StackPanel>
                </ui:CardExpander>

                <ui:CardExpander
                    Header="{DynamicResource Theme_UIColors}"
                    Icon="{ui:SymbolIcon Color24}"
                    IsExpanded="True">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="{DynamicResource Theme_TextColor}" />
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Border
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0"
                                    BorderBrush="#333333"
                                    BorderThickness="1"
                                    CornerRadius="10">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding Text, ElementName=TextColorHex}" />
                                    </Border.Background>
                                </Border>
                                <ui:TextBox
                                    x:Name="TextColorHex"
                                    MinWidth="110"
                                    Margin="0,0,5,0"
                                    HorizontalContentAlignment="Center"
                                    Text="#FF000000" />
                                <Button
                                    Click="PickColor_Click"
                                    Content="..."
                                    Tag="{Binding ElementName=TextColorHex}" />
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="{DynamicResource Theme_AccentColor}" />
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Border
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0"
                                    BorderBrush="#333333"
                                    BorderThickness="1"
                                    CornerRadius="10">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding Text, ElementName=AccentHex}" />
                                    </Border.Background>
                                </Border>
                                <ui:TextBox
                                    x:Name="AccentHex"
                                    MinWidth="110"
                                    Margin="0,0,5,0"
                                    HorizontalContentAlignment="Center"
                                    Text="#FF0078D7" />
                                <Button
                                    Click="PickColor_Click"
                                    Content="..."
                                    Tag="{Binding ElementName=AccentHex}" />
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="{DynamicResource Theme_ButtonFill}" />
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Border
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0"
                                    BorderBrush="#333333"
                                    BorderThickness="1"
                                    CornerRadius="10">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding Text, ElementName=BtnBgHex}" />
                                    </Border.Background>
                                </Border>
                                <ui:TextBox
                                    x:Name="BtnBgHex"
                                    MinWidth="110"
                                    Margin="0,0,5,0"
                                    HorizontalContentAlignment="Center"
                                    Text="#1A000000" />
                                <Button
                                    Click="PickColor_Click"
                                    Content="..."
                                    Tag="{Binding ElementName=BtnBgHex}" />
                            </StackPanel>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="{DynamicResource Theme_ButtonHover}" />
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Border
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0"
                                    BorderBrush="#333333"
                                    BorderThickness="1"
                                    CornerRadius="10">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding Text, ElementName=BtnHoverHex}" />
                                    </Border.Background>
                                </Border>
                                <ui:TextBox
                                    x:Name="BtnHoverHex"
                                    MinWidth="110"
                                    Margin="0,0,5,0"
                                    HorizontalContentAlignment="Center"
                                    Text="#29000000" />
                                <Button
                                    Click="PickColor_Click"
                                    Content="..."
                                    Tag="{Binding ElementName=BtnHoverHex}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ui:CardExpander>

            </StackPanel>
        </ScrollViewer>

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <ui:Button
                Margin="0,0,10,0"
                Appearance="Secondary"
                Click="Randomize_Click"
                Content="{DynamicResource Theme_Randomize}"
                Icon="{ui:SymbolIcon ArrowShuffle24}" />
            <ui:Button
                Margin="0,0,10,0"
                Click="Preview_Click"
                Content="{DynamicResource Theme_Preview}"
                Icon="{ui:SymbolIcon Eye24}" />
            <ui:Button
                Appearance="Primary"
                Click="Save_Click"
                Content="{DynamicResource Theme_Save}"
                Icon="{ui:SymbolIcon Save24}" />
        </StackPanel>
    </Grid>
</ui:FluentWindow>