<Window
    x:Class="Automatization.UI.TimerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Timer"
    Width="120"
    Height="120"
    AllowsTransparency="True"
    Background="{x:Null}"
    MouseDown="Window_MouseDown"
    PreviewMouseWheel="Window_PreviewMouseWheel"
    ResizeMode="CanResizeWithGrip"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStyle="None">

    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem x:Name="PauseMenuItem" Header="Pause" Click="PauseMenuItem_Click"/>
            <MenuItem Header="Remove" Click="RemoveMenuItem_Click"/>
        </ContextMenu>
    </Window.ContextMenu>

    <Viewbox Stretch="Uniform">
        <Grid Width="100" Height="100">
            <Border
                x:Name="BackgroundBorder"
                Background="#99000000"
                BorderBrush="#FFD700"
                BorderThickness="2"
                CornerRadius="50">
                <Grid>
                    <ui:ProgressRing
                        x:Name="TimerProgressRing"
                        Width="96"
                        Height="96"
                        Background="Transparent"
                        Foreground="#FFD700"
                        IsIndeterminate="False"
                        Progress="100" />

                    <TextBlock
                        x:Name="TimerLabel"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI"
                        FontSize="36"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="40">
                        <TextBlock.Effect>
                            <DropShadowEffect
                                BlurRadius="2"
                                Direction="320"
                                Opacity="0.5"
                                ShadowDepth="2"
                                Color="Black" />
                        </TextBlock.Effect>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
    </Viewbox>
</Window>